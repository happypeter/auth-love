<!-- the code is same as post#index, need to DRY up, but don't know @post -> @posts -->
<!-- since _posthead reads from @posts -->
<div>
  <div id="post_head">
    <%= @post.id %>. 
	<% if session[:posts_voted]&&session[:posts_voted].include?(@post.id.to_s)%>
	    <img src="http://ycombinator.com/images/s.gif" height=1 width=14>
	<% else %>    
	    <a id=<%=@post.id.to_s %> onclick="return vote(this)" href=<%="/post_vote?id="+@post.id.to_s %>><img src="http://ycombinator.com/images/grayarrow.gif" border=0 vspace=3 hspace=2></a>
	<%end%>
    <% @user = User.find(@post.user_id )%>
    <span class="comhead">
    (
    by <%= link_to  @user.name, user_path(@user) %> <%= @post.created_at %>
    <% if current_user && current_user.id == @post.user.id  %>
      <%= link_to 'Edit', edit_post_path(@post) %>|
      <%= link_to 'Delete', @post, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>
    )
    </span>
  </div>
 
  <div id="post_body">
    <%= markdown(@post.content) %>
  </div>
</div>

<%= render "comments/form" %>
Use Markdown for formatting. See <%= link_to "examples", markdown_path %>.
<br> 
<br> 
<% if @post.comments.any? %>  
    <%= nested_comments @post.comments.arrange(:order => :created_at) %>
<% end %>
